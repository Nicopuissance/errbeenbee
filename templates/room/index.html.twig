{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Address</th>
                <th>City</th>
                <th>Surface</th>
                <th>PriceByNight</th>
                <th>Active</th>
                <th>Capacity</th>
                <th>SharedRoom</th>
                <th>SharedKitchen</th>
                <th>SharedBathroom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.address }}</td>
                <td>{{ room.City }}</td>
                <td>{{ room.surface }}</td>
                <td>{{ room.priceByNight }}</td>
                <td>{{ room.active ? 'Yes' : 'No' }}</td>
                <td>{{ room.capacity }}</td>
                <td>{{ room.sharedRoom ? 'Yes' : 'No' }}</td>
                <td>{{ room.sharedKitchen ? 'Yes' : 'No' }}</td>
                <td>{{ room.sharedBathroom ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}
