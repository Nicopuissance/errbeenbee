{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ room.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ room.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ room.City }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ room.surface }}</td>
            </tr>
            <tr>
                <th>PriceByNight</th>
                <td>{{ room.priceByNight }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ room.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ room.capacity }}</td>
            </tr>
            <tr>
                <th>SharedRoom</th>
                <td>{{ room.sharedRoom ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>SharedKitchen</th>
                <td>{{ room.sharedKitchen ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>SharedBathroom</th>
                <td>{{ room.sharedBathroom ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('room_index') }}">back to list</a>

    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
