{% extends 'base.html.twig' %}

{% block title %}House{% endblock %}

{% block body %}
    <h1>House</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ house.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ house.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ house.description }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ house.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ house.City }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ house.surface }}</td>
            </tr>
            <tr>
                <th>PriceByNight</th>
                <td>{{ house.priceByNight }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ house.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ house.capacity }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ house.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('house_index') }}">back to list</a>

    <a href="{{ path('house_edit', {'id': house.id}) }}">edit</a>

    {{ include('house/_delete_form.html.twig') }}
{% endblock %}
